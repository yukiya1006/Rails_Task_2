<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <%= form_with model: @book, local:true do |f| %>
          <div class="form-group">Title</div>
          <%= f.text_field :title %>

          <div class="form-group">Opinion</div>
          <%= f.text_area :body %>

          <div class="form-group">
            <%= f.submit 'Update Book', class: "btn btn-success" %>
          </div>
        <% end %>

<P><%= link_to "Show", book_path %></P>
<P><%= link_to "Back", books_path %></P>
</div>
</div>
</div>