<div class="container px-5 px-sm-0">
  <div class="row">

  <%= render "list", book: @book_new, user: @user  %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
      	  <tbody>
      		  <tr>
              <td>
                <%= image_tag @book.user.get_profile_image, size: "50x50" %>
                <p><%= link_to user_path(@user) do %>
                <%= @user.name %>
                <% end %>
                </p>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %></td>
                <% end %>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>  
